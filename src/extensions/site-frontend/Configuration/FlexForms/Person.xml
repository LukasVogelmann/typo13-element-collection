<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <sheetTitle>
                    General
                </sheetTitle>
                <type>array</type>
                <el>
                    <settings.contact>
                        <TCEforms>
                            <label>Person</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <itemsProcFunc>
                                    Site\Frontend\ItemsProcFunc->filterPersonsByLanguage</itemsProcFunc>
                                <items type="array"></items>

                                <minitems>1</minitems>
                                <maxitems>1</maxitems>
                            </config>
                        </TCEforms>
                    </settings.contact>
                    <settings.contact_layout>
                        <TCEforms>
                            <label>Person Layout</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Default</numIndex>
                                        <numIndex index="1">default</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Minimal</numIndex>
                                        <numIndex index="1">minimal</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Large</numIndex>
                                        <numIndex index="1">large</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">Teaser</numIndex>
                                        <numIndex index="1">teaser</numIndex>
                                    </numIndex>
                                    <numIndex index="4" type="array">
                                        <numIndex index="0">Pdf</numIndex>
                                        <numIndex index="1">pdf</numIndex>
                                    </numIndex>
                                </items>
                                <minitems>1</minitems>
                                <maxitems>1</maxitems>
                            </config>
                        </TCEforms>
                    </settings.contact_layout>
                    <settings.contact_position>
                        <TCEforms>
                            <label>Layout Position</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Center</numIndex>
                                        <numIndex index="1">center</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Left</numIndex>
                                        <numIndex index="1">start</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Right</numIndex>
                                        <numIndex index="1">end</numIndex>
                                    </numIndex>
                                </items>
                                <minitems>1</minitems>
                                <maxitems>1</maxitems>
                            </config>
                        </TCEforms>
                    </settings.contact_position>
                    <settings.optional_text>
                        <TCEforms>
                            <label>Optional text for pdf/minimal/large layout</label>
                            <config>
                                <type>text</type>
                                <enableRichtext>1</enableRichtext>
                            </config>
                        </TCEforms>
                    </settings.optional_text>
                    <settings.optional_button_link>
                        <TCEforms>
                            <label>Link of optional button for minimal layout</label>
                            <config>
                                <type>input</type>
                                <renderType>inputLink</renderType>
                            </config>
                        </TCEforms>
                    </settings.optional_button_link>
                    <settings.optional_button_text>
                        <TCEforms>
                            <label>Text of optional button for minimal layout</label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.optional_button_text>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>